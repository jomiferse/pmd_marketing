---
const { items = [] } = Astro.props;
---

<div class="space-y-3">
  {items.map((item, index) => (
    <details
      class="group rounded-2xl border border-white/70 bg-white/80 p-5 text-left shadow-soft backdrop-blur transition hover:-translate-y-0.5 hover:shadow-card"
      open={index === 0}
    >
      <summary class="flex cursor-pointer list-none items-center justify-between gap-4">
        <span class="text-sm font-semibold text-ink">{item.title}</span>
        <span class="text-lg text-slate group-open:hidden">+</span>
        <span class="text-lg text-slate hidden group-open:inline">-</span>
      </summary>
      <p class="mt-3 text-sm text-slate">{item.content}</p>
    </details>
  ))}
</div>
