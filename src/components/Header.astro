---
import AnimatedGradientText from "./AnimatedGradientText.astro";
import Button from "./Button.astro";
import { APP_URL } from "../lib/site";

const navItems = [
  { href: "/pricing", label: "Pricing" },
  { href: "/faq", label: "FAQ" }
];
---

<header class="sticky top-0 z-20 border-b border-white/40 bg-white/80 backdrop-blur">
  <div class="mx-auto flex max-w-6xl items-center justify-between px-4 py-4 sm:px-6">
    <a href="/" class="text-sm font-semibold uppercase tracking-[0.25em] text-ink">
      <AnimatedGradientText>PMD</AnimatedGradientText>
    </a>
    <nav class="flex items-center gap-4 text-sm text-slate">
      <div class="hidden items-center gap-4 rounded-full border border-white/60 bg-white/80 px-4 py-2 shadow-soft lg:flex">
        {navItems.map((item) => (
          <a href={item.href} class="transition hover:text-ink">
            {item.label}
          </a>
        ))}
      </div>
      <Button href={`${APP_URL}/login`} variant="ghost" size="sm">
        Login
      </Button>
      <Button href={`${APP_URL}/register`} size="sm">
        Get started
      </Button>
    </nav>
  </div>
</header>
