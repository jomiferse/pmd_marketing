---
const {
  className = "",
  color = "rgba(185, 242, 124, 0.45)",
  size = 420,
  style = ""
} = Astro.props;

const inlineStyle = `width: ${size}px; height: ${size}px; background: radial-gradient(circle, ${color} 0%, rgba(255, 255, 255, 0) 70%); ${style}`;
---

<div class={`pointer-events-none absolute rounded-full blur-3xl ${className}`} style={inlineStyle} />
