---
import Badge from "../../components/Badge.astro";
import Card from "../../components/Card.astro";
import Button from "../../components/Button.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";
import { APP_URL } from "../../lib/site";
---

<BaseLayout
  title="PMD docs"
  description="Documentation for PMD Polymarket alerts and monitoring workflows. Placeholder content for upcoming guides."
  path="/docs"
>
  <div class="mx-auto max-w-3xl space-y-8">
    <div class="rounded-3xl border border-white/70 bg-white/70 p-8 text-center shadow-card backdrop-blur">
      <Badge>Docs</Badge>
      <h1 class="mt-3 text-3xl font-semibold text-ink">Documentation is on the way</h1>
      <p class="mt-3 text-sm text-slate">
        We are preparing step-by-step guides for alert filters, FAST mode, and Copilot workflows.
      </p>
    </div>
    <Card class="space-y-4">
      <h2 class="text-xl font-semibold text-ink">In the meantime</h2>
      <p class="text-sm text-slate">
        Create an account to explore the dashboard, then check back for deeper technical docs.
      </p>
      <div>
        <Button href={`${APP_URL}/register`} size="lg">Create account</Button>
      </div>
    </Card>
  </div>
</BaseLayout>
