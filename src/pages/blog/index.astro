---
import Badge from "../../components/Badge.astro";
import Card from "../../components/Card.astro";
import Button from "../../components/Button.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";
import { APP_URL } from "../../lib/site";
---

<BaseLayout
  title="PMD blog"
  description="Product updates, market signal insights, and Polymarket monitoring notes. Placeholder for upcoming posts."
  path="/blog"
>
  <div class="mx-auto max-w-3xl space-y-8">
    <div class="rounded-3xl border border-white/70 bg-white/70 p-8 text-center shadow-card backdrop-blur">
      <Badge>Blog</Badge>
      <h1 class="mt-3 text-3xl font-semibold text-ink">Signal notes are coming soon</h1>
      <p class="mt-3 text-sm text-slate">
        We will share market monitoring insights, release notes, and Copilot updates here.
      </p>
    </div>
    <Card class="space-y-4">
      <h2 class="text-xl font-semibold text-ink">Want updates first?</h2>
      <p class="text-sm text-slate">
        Join the dashboard to receive alert digests and product updates in Telegram.
      </p>
      <div>
        <Button href={`${APP_URL}/register`} size="lg">Join PMD</Button>
      </div>
    </Card>
  </div>
</BaseLayout>
